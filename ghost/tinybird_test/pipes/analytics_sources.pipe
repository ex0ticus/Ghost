NODE analytics_sources_1
DESCRIPTION >
    Aggregate by referral and calculate session and hits

SQL >
    SELECT
        site_uuid,
        toDate(timestamp) AS date,
        device,
        browser,
        location,
        referrer,
        uniqState(session_id) AS visits,
        countState() AS hits
    FROM analytics_hits
    WHERE domainWithoutWWW(referrer) != current_domain
    GROUP BY site_uuid, date, device, browser, location, referrer

TYPE MATERIALIZED
DATASOURCE analytics_sources_mv
